def service = "${env.SERVICE}"
def tag = "${env.TAG}"
def env = "${env.JOB_BASE_NAME}".split("-").last()
echo "SERVICE: ${service}"
echo "TAG: ${tag}"
echo "ENV: ${env}"
try {
    node("master"){
        checkout scm
        def deployer = load("jenkins/deployer.groovy")
        deployer.deployStandAlone(env, service, tag)
    }
} catch (e) {
    throw e
}