def env = "${env.JOB_BASE_NAME}".split("-").last()
def image_tag = "{env.IMAGE_TAG}"
def service = image_tag.split(":").first()
def tag = image_tag.split(":").last()

try {
    node("slave"){
        checkout scm
        def deployer = load("jenkins/deployer.groovy")
        deployer.deployStandAlone(env, service, tag)
    }
} catch (e) {
    throw e
}