def env = "${env.JOB_BASE_NAME}".split("-").last()
echo env
echo "${env.JOB_BASE_NAME}"
echo "${env.GROUP}"
def service = "${env.GROUP}".split(":").first()
def tag = "${env.GROUP}".split(":").last()

try {
    node("slave"){
        checkout scm
        def deployer = load("jenkins/deployer.groovy")
        deployer.deployStandAlone(env, service, tag)
    }
} catch (e) {
    throw e
}